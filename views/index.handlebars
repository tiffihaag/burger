<div class="container">
	<div class="jumbotron">
		<h1 class="text-center"><strong>Eat-Da-Burger</strong></h1>

<form class="form-horizontal">
	<div class="hamurgerInput">
	  <input type="text" class="form-control" placeholder="Hamburger input">
	</div>
</form>

  <div class="form-group">
    <div class="submitButton">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
  </div>
</div>

<table>
  <tr>
    <th>Bite Me!
      <br></br>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="burgers/update/{{this.burger_name}}?_method=PUT" method="POST"><input type="hidden" name="devoured" value="1">
                <button type="submit">DEVOUR</button>
              </form>

              {{> burger/delete-burger}}
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </th>

    <th>Ouch! Maybe just nibble me next time.
    <br></br>
   <ul>
    {{#each burgersDevour}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="burgers/update/{{this.burger_name}}?_method=PUT" method="POST"><input type="hidden" name="devoured" value="0">
            <button type="submit">DELETE</button>
          </form>

          {{> burger/delete-burger}}
        </li>
      {{/unless}}
    {{/each}}
  </ul>

    </th>
  </tr>

	


