<div class="container">
	<div class="jumbotron">
		<h1 class="text-center"><strong>Eat-Da-Burger</strong></h1>

<form class="form-horizontal">
	<div class="hamurgerInput">
	  <input type="text" class="form-control" placeholder="Hamburger input">
	</div>
</form>

  <div class="form-group">
    <div class="submitButton">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
  </div>
</div>

<table>
  <tr>
    <th>Bite Me!</th>
    <th>Ouch! Maybe just nibble me next time.</th>
  </tr>

	<ul>
  {{#each burger}}
    {{#unless this.eaten}}
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="value" name="eaten" value="true">
          <button type="submit">DEVOUR!</button>
        </form>

        {{> burger/delete-burger}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
  <!-- <input type="hidden" name="id" value="{{this.id}}"> -->
  <button type="submit">DELETE!</button>
</form>
